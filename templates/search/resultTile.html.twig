<a href="{{ path('recipe', {'slug': recipe.slug}) }}">
    <div class="search-result-tile"
        {% if recipe.images.first %}
            style='background-image: url("{{ vich_uploader_asset(recipe.images.first, 'imageFile') | imagine_filter('recipe_main_image') }}");'
        {% endif %}
    >
        <p class="search-result-tile-title">
            {{ recipe.name }}
        </p>
    </div>
</a>
